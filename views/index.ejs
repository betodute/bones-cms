<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>My Blog</title>
  </head>
  <body>
    <h1>My Blog</h1>
    <% if (posts.length === 0) { %>
      <p>No posts yet.</p>
    <% } else { %>
      <ul>
        <% posts.forEach(post => { %>
          <li>
            <h2><%= post.title %></h2>
            <p><%= post.date.toLocaleDateString() %>, <%= post.date.toLocaleTimeString([], { hour: "numeric", minute: "2-digit" }) %></p>
            <p><%= post.content %></p>
            <p><a href="/posts/<%= post._id %>">View full post</a></p>
          </li>
        <% }); %>
      </ul>
    <% } %>
  </body>
</html>